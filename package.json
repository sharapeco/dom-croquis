{
  "name": "dom-croquis",
  "type": "module",
  "version": "0.1.3",
  "description": "Faster screenshots of web pages with JavaScript",
  "directories": {
    "example": "examples"
  },
  "scripts": {
    "dev": "npx http-server .",
    "build": "rollup --config && rollup --config --environment MINIFY",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sharapeco/dom-croquis.git"
  },
  "author": "Shinichiro Yabu",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sharapeco/dom-croquis/issues"
  },
  "homepage": "https://dom-croquis.suzume.dev",
  "devDependencies": {
    "@rollup/plugin-strip": "^3.0.4",
    "@rollup/plugin-terser": "^0.4.4",
    "jest": "^29.7.0",
    "rollup": "^4.37.0"
  }
}
